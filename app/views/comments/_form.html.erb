<%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
        <%= f.label :commenter, 'Author' %><br>
        <%= f.text_field :commenter %>
    </p>
    <p>
        <%= f.label :body, 'Instructions' %><br>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>